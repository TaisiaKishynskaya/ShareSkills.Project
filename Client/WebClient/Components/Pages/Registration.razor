@page "/Registration"

<div class="main">
    <h1>Share Skills</h1>
    <div class="info">
        <div class="input-info">
            <input type="text" class="main-input" placeholder="Name">
            <input type="text" class="main-input" placeholder="Surname">
            <input type="text" class="main-input" placeholder="Email">
            <input type="text" class="main-input" placeholder="Password">
        </div>
        <div class="switch-btn">
            <p>Student</p>
            <label class="switch">
                <input type="checkbox">
                <span class="slider round"></span>
            </label>
            <p>Teacher</p>
        </div>
        <button class="next-btn">Continue</button>
        <div class="login-link">
            <p>Already have an account?</p>
            <a href="">Log in</a>
        </div>
    
    </div>
</div>