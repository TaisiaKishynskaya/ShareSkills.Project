@page "/feedback"
@inject NavigationManager Navigation

<div class="main">
        <div class="title">
            <svg @onclick="goBack" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>
            <p>Feedback</p>
        </div>

        @foreach (var feedback in feedbackCards) {
            <div class="card">
                <div class="info">
                    <div class="text">
                        <p>@feedback.name</p>
                        <p>@feedback.skill</p>
                    </div>
                    <div class="rating">
                        <div class="star-rating">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="yellow" d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"/></svg>
                            <p>@feedback.rating</p>
                        </div>
                        <svg @onclick="() => ToggleDisplay(feedback.id)" class="drop" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M137.4 374.6c12.5 12.5 32.8 12.5 45.3 0l128-128c9.2-9.2 11.9-22.9 6.9-34.9s-16.6-19.8-29.6-19.8L32 192c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9l128 128z"/></svg>
                    </div>
                </div>

                <hr class="@(feedback.isFeedbackVisible ? "box" : "none")">

                <div class="feedback @(feedback.isFeedbackVisible ? "box" : "none")">
                    <p>Leave your feedback</p>
                    <div class="stars-input">
                        <input type="number">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="yellow" d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"/></svg>
                    </div>
                    <button>Send</button>
                </div>
            </div>
        }

    </div>

@code {
    public void goBack() {
        Navigation.NavigateTo("/cabinet");
    }

    private class FeedbackInfo {
        public int id {get; set;}
        public string name {get; set;}
        public string skill {get; set;}
        public double rating {get; set;}
        public bool isFeedbackVisible {get; set;}

        public FeedbackInfo(int id, string name, string skill, double rating) {
            this.id = id;
            this.name = name;
            this.skill = skill;
            this.rating = rating;
            this.isFeedbackVisible = false;
        }
    }

    private FeedbackInfo[] feedbackCards = {
        new FeedbackInfo(0, "Іванов Іван", "Python", 4.8),
        new FeedbackInfo(1, "Шевченко Тарас", "Java", 5.0)
    };


    void ToggleDisplay(int id)
    {
        foreach (var feedback in feedbackCards) {
            if (id == feedback.id) {
                feedback.isFeedbackVisible = !feedback.isFeedbackVisible;
            }
        }
    }
}